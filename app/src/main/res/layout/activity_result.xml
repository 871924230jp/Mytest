<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_Maincolor"
        android:padding="5dp">

        <Button

            android:id="@+id/finish"
            android:onClick="click"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/jtz"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细页"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:textColor="#EEEAEA"/>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEDFDF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title_rs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="555sssdawdsdadwadadasadwdadwadadawdadawdawdasdawdadawada5"
                    android:textSize="25dp"
                    android:textColor="#4B4747"
                    android:padding="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center">

                <com.example.newsclient_project1_myimageview_intent.myview.MyImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/myiv_image_rs"
                    android:src="@mipmap/ic_launcher_round"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#4B4747"
                    android:id="@+id/tv_pubDate_rs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="时间"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <TextView
                    android:textColor="#4B4747"
                    android:id="@+id/tv_author_rs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="作者"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                >

                <TextView
                    android:textColor="#4B4747"
                    android:id="@+id/tv_description_rs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="wwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww"
                    android:textSize="20dp"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="原文链接："
                        android:textSize="18dp"
                        />

                <TextView
                    android:textColor="#3F51B5"
                    android:onClick="click"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="link"
                    android:textSize="18dp"
                    android:id="@+id/tv_link_rs"

                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>